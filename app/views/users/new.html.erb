<h1>Create an Account </h1>

<%= form_for @user do |f| %>
  <div>
  <%= f.label :name %>:
  <%= f.text_field :name %>
  </div>
  <div>
  <%= f.label :email %>:
  <%= f.text_field :email %>
  </div>
  <div>
  <%= f.label :password %>:
  <%= f.password_field :password %>
  </div>
  <div>
  <%= f.label :confirm_password %>:
  <%= f.password_field :confirm_password%>
  </div>

  <%= f.submit %>
<% end %>

